<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HealthConnectExistingBindings.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HealthConnectExistingBindings"
    xmlns:pages="clr-namespace:HealthConnectExistingBindings.Pages"
    Title="HealthConnect">

    <TabBar>
        <ShellContent
            Title="Pas"
            Icon="🚶"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        
        <ShellContent
            Title="Détails"
            Icon="⚙️"
            ContentTemplate="{DataTemplate pages:HealthPage}"
            Route="HealthPage" />
    </TabBar>

</Shell>
