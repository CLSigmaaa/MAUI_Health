<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthConnectExistingBindings.MainPage"
             Title="Compteur de Pas">

    <Grid Padding="30" RowDefinitions="Auto,*,Auto,Auto">
        
        <!-- Titre -->
        <Label Grid.Row="0" 
               Text="Mon nombre de pas aujourd'hui" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               Margin="0,20" />

        <!-- Affichage du nombre de pas -->
        <Border Grid.Row="1" 
               BackgroundColor="LightBlue" 
               StrokeShape="RoundRectangle 20" 
               Padding="40" 
               HorizontalOptions="Center" 
               VerticalOptions="Center">
            <StackLayout>
                <Label Text="{Binding Steps, StringFormat='{0:N0}'}" 
                       FontSize="48" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       TextColor="DarkBlue" />
                <Label Text="pas" 
                       FontSize="18" 
                       HorizontalOptions="Center" 
                       TextColor="DarkBlue" />
            </StackLayout>
        </Border>

        <!-- Bouton Actualiser -->
        <Button Grid.Row="2" 
                Text="🔄 Actualiser" 
                Command="{Binding RefreshCommand}" 
                FontSize="18" 
                BackgroundColor="Green" 
                TextColor="White" 
                CornerRadius="25" 
                HeightRequest="50" 
                Margin="0,20" />

        <!-- Message de statut -->
        <Label Grid.Row="3" 
               Text="{Binding StatusMessage}" 
               FontSize="14" 
               HorizontalOptions="Center" 
               TextColor="Gray" 
               Margin="0,10" />

        <!-- Indicateur de chargement -->
        <ActivityIndicator Grid.Row="1" 
                          IsVisible="{Binding IsLoading}" 
                          IsRunning="{Binding IsLoading}" 
                          Color="Blue" 
                          VerticalOptions="End" 
                          HorizontalOptions="Center" 
                          Margin="0,10" />

    </Grid>

</ContentPage>
